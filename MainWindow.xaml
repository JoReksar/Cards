<Window x:Class="Modelling_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modelling_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Name="mainCanvas">
        <Label Content="Введите характеристики:" Canvas.Left="5" Canvas.Top="5" Foreground="Tomato"/>
        
        <Label Content="Количество карт в строке" Canvas.Left="10" Canvas.Top="25"/>
        <TextBox Name="countCardsInRow" Width="75" Height="18" Canvas.Left="165" Canvas.Top="30"/>
        
        <Label Content="Размер карты" Canvas.Left="10" Canvas.Top="45"/>
        <TextBox Name="sizeCards" Width="75" Height="18" Canvas.Left="165" Canvas.Top="50"/>

        <Button Name="showCard" Content="Показать карты" Click="ShowCards" Canvas.Left="75" Canvas.Top="75"/>
        
    </Canvas>
</Window>
